@model LoginViewModel
@{
    ViewBag.Title = "Выполнить вход";
}
<h2>@ViewBag.Title.</h2>
<div>
    @if (!User.Identity.IsAuthenticated)
    {   
        <h4>Используйте локальную учетную запись для входа.</h4>
        <hr/>
        <form asp-action="Login" method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="ErrorLi"></div>
            <div>
                <label asp-for="UserName"></label><br />
                <input asp-for="UserName" /><br />
                <span asp-validation-for="UserName" ></span>
            </div>
            <div>
                <label asp-for="Password"></label><br />
                <input asp-for="Password" class="TextInput" /><br />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <input asp-for="RememberMe"  />
                <label asp-for="RememberMe"></label>
            </div>
            <br/>
            <div>
                <input type="submit" value="Войти" class="ActionButton" />
            </div>
        </form>
    }
    else
    {
        <h1>Вы уже выполнили вход</h1>
    }
</div>