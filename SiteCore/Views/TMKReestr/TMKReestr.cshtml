@using SiteCore.Data
@model SiteCore.Models.IndexModel
@{
    ViewBag.Title = "Справочник ТМК";
}

@{
    var IsTMKUser = User.IsInRole("TMKUser");
    var IsTMKAdmin = User.IsInRole("TMKAdmin");
    var IsTMKReader = User.IsInRole("TMKReader");
    var IsTMKSMO = User.IsInRole("TMKSMO");
    var CODE_MO = User.CODE_MO();
}

@section Scripts
{
    <script src="~/js/AngularApp/TMKReestr/main.js" asp-append-version="true"></script>
    <script src="~/js/AngularApp/TMKReestr/polyfills.js" asp-append-version="true"></script>
    <script src="~/js/AngularApp/TMKReestr/runtime.js" asp-append-version="true"></script>
}
@section Style
{
    <link href="~/js/AngularApp/TMKReestr/styles.css" rel="stylesheet" asp-append-version="true" />
}

<app [IsTMKAdmin]="@(IsTMKAdmin? "true": "false")" [IsTMKUser]="@(IsTMKUser? "true": "false")" [IsTMKReader]="@(IsTMKReader? "true": "false")" [IsTMKSMO]="@(IsTMKSMO? "true": "false")"  [CODE_MO]="@(CODE_MO)"></app>
