@{
    ViewBag.Title = "Отчеты";
    var isAdmin = User.IsInRole("Admin");
    var isMO = User.IsInRole("MO");
    var isCS = User.IsInRole("CS");
}

<app [isadmin]="@(isAdmin? "true": "false")" [isMO]="@(isMO? "true": "false")" [isCS]="@(isCS? "true": "false")"></app>

@section Scripts
{
    <script src="~/js/AngularApp/Reestr/main.js" asp-append-version="true"></script>
    <script src="~/js/AngularApp/Reestr/polyfills.js" asp-append-version="true"></script>
    <script src="~/js/AngularApp/Reestr/runtime.js" asp-append-version="true"></script>
}
@section Style
{
    <link href="~/js/AngularApp/Reestr/styles.css" rel="stylesheet"  asp-append-version="true" />
}